@model Practica_VI_IV_Model.Models.Signin

@{
    ViewBag.Title = "Home Page";
}

    
     
        <div class="container">
            <div class="card card-container">
                <h2 class="titleLogin">Registrarse</h2>

                @using (Html.BeginForm("SingIn", "Home", FormMethod.Post, new { @class = "form-signin" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div>
                        @Html.TextBoxFor(u => u.Name, new { @class = "form-control", @placeholder = "Nombre" })
                        @Html.ValidationMessageFor(u => u.Name, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control", @placeholder = "Nombre de Usuario" })
                        @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.TextBoxFor(u => u.Lastname, new { @class = "form-control", @placeholder = "Apellido" })
                        @Html.ValidationMessageFor(u => u.Lastname, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @placeholder = "Correo" })
                        @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                    </div>
                    <br />

                    if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="errorMessage">@ViewBag.Message</p>
                    }
                    <input type="submit" value="Registrarse" class="btn btn-signin" />
                }

                @Html.ActionLink("Login", "Index", "Home")
            </div>
        </div>
    
   